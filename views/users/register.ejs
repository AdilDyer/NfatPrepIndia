<%layout("/layouts/boilerplate")%>
<div class="containerOfCard">
  <div class="Card-login-regis Card">
    <h5 class="card-title">Register To Learn !</h5>
    <br /><br />

    <form action="/register" class="needs-validation" method="post" novalidate>
      <div class="username-cont">
        <h4 class="card-subtitle mb-2 text-body-primary cred-label">
          <i class="regis-subtext">Enter a Username </i>
        </h4>

        <br />

        <input
          class="text-body-primary credentials form-control"
          type="text"
          name="username"
          placeholder="Username"
          required
        />
        <div class="valid-feedback credentials">Username looks Good !</div>
        <div class="invalid-feedback credentials">
          Please Enter A Valid Username !
        </div>
      </div>
      <br /><br />

      <div class="pass-cont">
        <h4 class="card-subtitle mb-2 text-body-primary cred-label">
          <i class="regis-subtext">Enter a Password </i>
        </h4>

        <br />

        <input
          class="text-body-primary credentials form-control"
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <div class="valid-feedback credentials">Password looks Good !</div>
        <div class="invalid-feedback credentials">
          Please Enter A Valid Password !
        </div>
      </div>
      <br /><br /><br />

      <button class="btn btn-primary btn-lg">
        &nbsp;&nbsp;&nbsp;&nbsp;REGISTER&nbsp;&nbsp;&nbsp;&nbsp;
      </button>
      <br /><br /><br />
    </form>

    <h4 class="card-subtitle mb-2 text-body-primary regis-using-text">
      Or Register Using :
    </h4>
  </div>
</div>
